.uk-tile.uk-tile-primary.uk-padding-small
  ="Calculé sur la moyenne des 3 meilleurs temps"
.uk-heading-small.uk-heading-divider = "Temps moyens"
table.uk-table.uk-table-striped
  tr
    th
      ="Numéro #"
    th
      ="Pilote"
    th
      ="Temps"
  - @competitors_avg.each do |nb, avg_time|
    tr
      td
        ="##{nb}"
      td
        = @all_competitors[nb]['name']
      td
        - time = get_duration_hrs_and_mins(avg_time)
        - if time.is_a? Hash
          - min = "0#{time[:minutes]}".reverse[0,2].reverse
          - sec = "0#{time[:seconds]}".reverse[0,2].reverse
          - ms = "00#{time[:milliseconds]}".reverse[0,3].reverse
          = "#{min}m:#{sec}s:#{ms}ms"
